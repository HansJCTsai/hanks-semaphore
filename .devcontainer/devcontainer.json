{
    "name": "hanks-semaphore Env (Python Only)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    
    "features": {
        // 前端開發需要 Node.js
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "username": "vscode",
            "upgradePackages": true
        }
    },
    
    // 8000=FastAPI, 8080=Frontend, 5432=PostgreSQL(DB) ,6379=Redis, 5555=Celery Flower (監控)
    "forwardPorts": [8000, 8080, 5432, 6379, 5555],

    "customizations": {
        "vscode": {
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "eamodio.gitlens",
                "mhutchie.git-graph",
                "redhat.ansible",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg",
                "charliermarsh.ruff",
                "tamasfe.even-better-toml"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./.venv/bin/python",
                "ansible.python.interpreterPath": "./.venv/bin/python",
                // [關鍵] 強制容器內檔案使用 LF 換行，避免 Shell Script 在 Windows 編輯後無法執行
                "files.eol": "\n",
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                }
            }
        }
    },
    
    // 執行安裝腳本
    "postCreateCommand": "bash .devcontainer/postCreateCommand.sh",
    
    // [⚠️ 關鍵修正] Python 官方映像檔的使用者名稱是 "vscode"
    "remoteUser": "vscode",

    // 關閉 VS Code 時停止容器，節省資源
    "shutdownAction": "stopCompose"
}